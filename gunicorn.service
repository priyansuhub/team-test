[Unit]
Description=demo fastapi application
After=network.target

[Service]
User=ppm
Group=ppm
WorkingDirectory=/home/ppm/app/src/
Environment="PATH=/home/ppm/app/venv/bin"
EnvironmentFile=/home/ppm/.env
ExecStart=/home/ppm/app/venv/bin/gunicorn -w 4 -k uvicorn.workers.UvicornWorker server.main:app --bind 0.0.0.0:8000

[Install]
WantedBy=multi-user.target